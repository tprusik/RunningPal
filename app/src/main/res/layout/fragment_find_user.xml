<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FindUserFragment"
    android:id="@+id/findUserFragment">

    <EditText
        android:id="@+id/etFindUser"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:hint="nazwa uÅ¼ytkownika"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnFindUser"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnFindUser"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_fin_user_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFindContact"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/etFindUser"/>

</androidx.constraintlayout.widget.ConstraintLayout>